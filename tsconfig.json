{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "lib": [
      "ES2021"
    ],
    "moduleResolution": "Node16",
    "noEmit": true,
    "strict": true
  },
  "include": [
    "index.js",
    "lib/**/*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
